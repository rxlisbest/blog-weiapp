<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="page tabbar">
    <view class="page__bd" style="height: 100%;">
      <view class="weui-grids">
        <navigator url="../video/category/category?type=1" class="weui-grid">
          <view class="weui-grid__icon">
            <i class="fa fa-file-video-o fa-2x" aria-hidden="true"></i>
          </view>
          <view class="weui-grid__label">视频</view>
        </navigator>
        <navigator url="../article/category/category?type=2" class="weui-grid">
          <view class="weui-grid__icon">
            <i class="fa fa-file-word-o fa-2x" aria-hidden="true"></i>
          </view>
          <view class="weui-grid__label">文字</view>
        </navigator>
        <navigator wx:for="0123456" url="" class="weui-grid gray">
          <view class="weui-grid__icon">
            <i class="fa fa-question fa-2x" aria-hidden="true"></i>
          </view>
          <view class="weui-grid__label gray">未知</view>
        </navigator>
      </view>
    </view>
  </view>
  <include src="../public/footer.wxml"/>
</view>
